{
  "name": "backend",
  "main": "./src/api/server.js",
  "scripts": {
    "dev": "tsnd --poll --respawn src/server.ts",
    "check-types": "tsc --noEmit --skipLibCheck",
    "db:reset": "npx -y tsc && sequelize-cli db:drop && npx sequelize-cli db:create && npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all --debug",
    "prepare": "husky install",
    "reset": "pm2 delete ./build/server.js && npx -y tsc && pm2 start ./build/server.js --name cinema && pm2 logs",
    "relogs": "git pull && npx -y tsc && pm2 delete ./build/server.js && pm2 start ./build/server.js --name cinema && pm2 logs"
  },
  "dependencies": {
    "axios": "1.6.2",
    "cors": "2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "16.0.0",
    "express": "4.17.3",
    "express-async-errors": "3.1.1",
    "joi": "17.9.2",
    "jsonwebtoken": "8.5.1",
    "multer": "^1.4.5-lts.1",
    "mysql2": "2.3.0",
    "sequelize": "6.29.0",
    "xlsx": "0.18.5",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.5",
    "@commitlint/config-angular": "17.6.5",
    "@faker-js/faker": "^8.3.1",
    "@types/cors": "2.8.13",
    "@types/express": "4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.11",
    "@types/node": "20.4.6",
    "@types/sequelize": "4.28.14",
    "@typescript-eslint/eslint-plugin": "5.3.1",
    "@typescript-eslint/parser": "5.3.1",
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "15.0.0",
    "eslint-plugin-editorconfig": "3.2.0",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-mocha": "10.1.0",
    "eslint-plugin-sonarjs": "0.10.0",
    "husky": "^8.0.0",
    "lint-staged": "13.2.3",
    "sequelize-cli": "6.6.2",
    "ts-node-dev": "1.1.8",
    "typescript": "4.4.4"
  }
}
